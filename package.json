{
  "name": "spotfi",
  "version": "1.0.0",
  "private": true,
  "description": "Cloud ISP Management Platform - Server Backend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @spotfi/api",
    "build": "npm run build:shared && npm run build:api",
    "build:shared": "npm run build -w @spotfi/shared",
    "build:api": "npm run build -w @spotfi/api",
    "start": "npm run start -w @spotfi/api",
    "prisma:generate": "npm run generate -w @spotfi/prisma",
    "prisma:migrate": "npm run migrate -w @spotfi/prisma",
    "prisma:migrate:deploy": "npm run migrate:deploy -w @spotfi/prisma",
    "prisma:seed": "npm run seed -w @spotfi/prisma",
    "migrate": "npm run prisma:migrate",
    "migrate:deploy": "npm run prisma:migrate:deploy",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "validate:radius": "tsx scripts/validate-radius-attributes.ts",
    "predeploy": "npm run validate:radius && npm run build"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5",
    "tsx": "^4.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

