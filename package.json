{
  "name": "spotfi",
  "version": "1.0.0",
  "private": true,
  "description": "Cloud ISP Management Platform - Server Backend",
  "scripts": {
    "dev": "pnpm --filter @spotfi/api dev",
    "build": "pnpm --filter @spotfi/api build",
    "start": "pnpm --filter @spotfi/api start",
    "prisma:generate": "pnpm --filter @spotfi/prisma generate",
    "prisma:migrate": "pnpm --filter @spotfi/prisma migrate",
    "prisma:seed": "pnpm --filter @spotfi/prisma seed",
    "setup": "pnpm install && pnpm prisma:generate && pnpm prisma:migrate && pnpm prisma:seed"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

