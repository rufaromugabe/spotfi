# FreeRADIUS Docker Compose Environment Variables
# Copy this file to .env.radius and update with your values

# Database Configuration (required)
# For Coolify: Use your Coolify-managed database connection details
DB_HOST=db
DB_PORT=5432
POSTGRES_DB=spotfi_db
POSTGRES_USER=spotfi
POSTGRES_PASSWORD=spotfi_password

# RADIUS Configuration
RADIUS_SECRET=testing123
RADIUS_DEBUG=no

# Port Configuration (optional)
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Container Names (optional)
RADIUS_CONTAINER_NAME=spotfi-radius
DB_CONTAINER_NAME=spotfi-radius-db
RADIUS_NETWORK_NAME=radius-network

# Timezone
TZ=UTC

